@model IEnumerable<Car>
<a href="/car/create" class="btn btn-outline-primary mb-3">Create</a>


<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Car datatable</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Model</th>
                        <th>Year</th>
                        <th>Price</th>
                        <th>Is deleted?</th>
                        <th></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Id</th>
                        <th>Model</th>
                        <th>Year</th>
                        <th>Price</th>
                        <th>Is deleted?</th>
                        <th></th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var car in Model)
                    {
                        <tr>
                            <td>@car.Id</td>
                            <td>@car.Model</td>
                            <td>@car.Year</td>
                            <td>@car.Price</td>
                            <td>@car.IsDeleted</td>

                            <td class="col-2">
                                <a href="/car/edit/@car.Id" class="btn btn-outline-warning">Edit</a>
                                <a href="/car/delete/@car.Id" class="btn btn-outline-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>